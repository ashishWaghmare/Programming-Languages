{
  "variables": {
    "source_ami": "ami-a5a98fde",
    "instance_type": "m3.medium",
    "ami_name": "datagov-web-ami {{isotime \"2006-01-02T03-04-05\"}}"
  },

  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "{{user `source_ami`}}",
    "instance_type": "{{user `instance_type`}}",
    "ssh_username": "ubuntu",
    "ami_name": "{{user `ami_name`}}"
  }],

  "provisioners": [
    {
        "type": "ansible-local",
        "playbook_dir": "ansible",
        "playbook_file": "ansible/datagov-web.yml",
        "inventory_groups": "wordpress-web",
        "extra_arguments": [
          "--tags='provision'",
          "--skip-tags='trendmicro,fluentd,saml2,wp-cli'",
          "--extra-vars='env_wp_env=production'",
          "--vault-password-file=''"
        ]
  }]
}
